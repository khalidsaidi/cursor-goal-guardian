{
  "name": "cursor-goal-guardian-extension",
  "displayName": "Cursor Goal Guardian",
  "description": "Goal-first Cursor: warns on drift, guides the agent, and only hard-blocks catastrophic actions.",
  "version": "0.2.0",
  "publisher": "khalidsaidi",
  "icon": "images/icon.png",
  "galleryBanner": {
    "color": "#0f172a",
    "theme": "dark"
  },
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/khalidsaidi/cursor-goal-guardian.git"
  },
  "engines": {
    "vscode": "^1.85.0"
  },
  "categories": ["Other"],
  "keywords": ["cursor", "mcp", "hooks", "security", "workflow", "guardrail", "ai-safety"],
  "activationEvents": [
    "onStartupFinished"
  ],
  "main": "dist/extension.js",
  "contributes": {
    "views": {
      "explorer": [
        {
          "type": "webview",
          "id": "goalGuardian.goalPanel",
          "name": "Goal Guardian"
        }
      ]
    },
    "commands": [
      {
        "command": "goalGuardian.install",
        "title": "Goal Guardian: Install/Configure in Workspace"
      },
      {
        "command": "goalGuardian.openContract",
        "title": "Goal Guardian: Open Contract"
      },
      {
        "command": "goalGuardian.uninstall",
        "title": "Goal Guardian: Remove from Workspace"
      },
      {
        "command": "goalGuardian.showPanel",
        "title": "Goal Guardian: Show Goal Panel"
      },
      {
        "command": "goalGuardian.showAudit",
        "title": "Goal Guardian: Show Audit Log"
      },
      {
        "command": "goalGuardian.requestPermit",
        "title": "Goal Guardian: Request Permit"
      },
      {
        "command": "goalGuardian.autoPermitLastAction",
        "title": "Goal Guardian: Auto-Permit Last Action"
      },
      {
        "command": "goalGuardian.refresh",
        "title": "Goal Guardian: Refresh"
      }
    ],
    "menus": {
      "view/title": [
        {
          "command": "goalGuardian.refresh",
          "when": "view == goalGuardian.goalPanel",
          "group": "navigation"
        }
      ]
    }
  },
  "scripts": {
    "build": "tsc -p tsconfig.json",
    "package": "node ../../scripts/package-extension.js",
    "publish": "node ../../scripts/publish-extension.js"
  },
  "devDependencies": {
    "@types/node": "^20.11.0",
    "@types/vscode": "^1.85.0",
    "typescript": "^5.3.3"
  },
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.0.0"
  }
}
